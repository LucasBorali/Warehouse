<UserControl x:Class="Warehouse.Views.DockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:utils="clr-namespace:Warehouse.Utils"
             xmlns:local="clr-namespace:Warehouse.Views"
             xmlns:vm="clr-namespace:Warehouse.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:DockVM />
    </UserControl.DataContext>

    <UserControl.Resources>
        <utils:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Label Content="Movimentações" FontSize="20" VerticalContentAlignment="Center" FontWeight="Bold" Foreground="#F1F1F1"/>
        
        <!-- Form -->
        <StackPanel Grid.Row="1"  >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="center">
                <!-- Tipos: Entrada || Saída -->
                <ComboBox Height="30" Width="200" VerticalAlignment="Center" SelectedIndex="0" ItemsSource="{Binding TransactionTypes}" SelectedValue="{Binding SelectedTransactionType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                
                <!-- Data da Movimentação -->
                <DatePicker Margin="15 0" Width="125" SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                
                <!-- Placa do caminhão -->
                <TextBox Width="125" Text="{Binding Plate, UpdateSourceTrigger=PropertyChanged}" mah:TextBoxHelper.Watermark="Placa do Veículo"/>
            </StackPanel>
            
            <StackPanel Margin="0 15" Orientation="Horizontal" HorizontalAlignment="center">
                 <!-- Produtor (clientes) -->
                <ComboBox Margin="0 0 15 0" Height="30" Width="200" VerticalContentAlignment="Center" IsEditable="True" mah:TextBoxHelper.Watermark="Selecione o Produtor" ItemsSource="{Binding Producers}" SelectedValue="{Binding Producer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Nome" DisplayMemberPath="Nome" />
                
                <!-- Buyer (em caso de Saída) -->
                <TextBox Text="{Binding Buyer, UpdateSourceTrigger=PropertyChanged}" Height="30"  Width="200" Visibility="{Binding SelectedTransactionType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Saída}" mah:TextBoxHelper.Watermark="Comprador" />
                
                <!-- Impureza (em caso de Entrada) -->
                
                <TextBox Text="{Binding Impureza, UpdateSourceTrigger=PropertyChanged}" Height="30" Width="200" Visibility="{Binding SelectedTransactionType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Entrada}" mah:TextBoxHelper.Watermark="Impureza" />
        </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="center">
                <!-- Umidade (em caso de Entrada) -->
                
                <TextBox Text="{Binding Umidade, UpdateSourceTrigger=PropertyChanged}" Height="30" Width="200" Visibility="{Binding SelectedTransactionType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Entrada}" mah:TextBoxHelper.Watermark="Umidade" />
                <!-- Peso -->
                <TextBox Text="{Binding Peso, UpdateSourceTrigger=PropertyChanged}" Margin="15 0" Height="30" Width="200" mah:TextBoxHelper.Watermark="Peso" />
                
                <!-- Ticket de pesagem -->
                <TextBox Text="{Binding Ticket, UpdateSourceTrigger=PropertyChanged}" Height="30" Width="200" mah:TextBoxHelper.Watermark="Ticket"/>

            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
