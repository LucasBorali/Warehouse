<UserControl x:Class="Warehouse.Views.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:Warehouse.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="100" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Label Content="Cadastro de Clientes" FontSize="20" VerticalContentAlignment="Center" FontWeight="Bold" Foreground="#F1F1F1"/>

        <StackPanel Grid.Row="1">
            <StackPanel  Margin="0 0 0 20" HorizontalAlignment="center"  Orientation="Horizontal">
                <TextBox  VerticalContentAlignment="center" Width="300" Height="30" mah:TextBoxHelper.Watermark="Nome"/>
                <TextBox VerticalContentAlignment="center" Margin="20 0" Width="300" Height="30" mah:TextBoxHelper.Watermark="Telefone"/>
                <TextBox VerticalContentAlignment="center" Width="300" Height="30" mah:TextBoxHelper.Watermark="CPF/CNPJ"/>
            </StackPanel>

            <StackPanel Margin="0 0 0 20" Orientation="Horizontal" HorizontalAlignment="center" >
                <Button Height="30" Width="100"  Content="Adicionar" Cursor="Hand" />
                <Button Height="30" Width="100" Margin="20 0 0 0" Content="Remover" Cursor="Hand" />
            </StackPanel>
        </StackPanel>

        

        <!-- Lista de clientes -->
        <DataGrid x:Name="ClientesDataGrid" Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
